{
  "name": "temporal-patterns-typescript",
  "version": "0.3.20",
  "description": "Temporal pattern examples",
  "main": "index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "_docker:build:up": "docker compose watch",
    "docker:up": "npm run _copy_env_example; npm run _docker:build:up",
    "docker:down": "docker compose down",
    "docker:reset": "docker compose down -v && npm run docker:up",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --fix --ext .ts",
    "test": "HMSH_LOGLEVEL=info NODE_ENV=test jest ./patterns/*/index.test.ts --detectOpenHandles --forceExit --verbose",
    "test:collation": "NODE_ENV=test jest ./patterns/collation/index.test.ts --detectOpenHandles --forceExit --verbose",
    "test:composition": "NODE_ENV=test jest ./patterns/composition/index.test.ts --detectOpenHandles --forceExit --verbose",
    "test:error-fatal": "NODE_ENV=test jest ./patterns/error-fatal/index.test.ts --detectOpenHandles --forceExit --verbose",
    "test:error-unknown": "NODE_ENV=test jest ./patterns/error-unknown/index.test.ts --detectOpenHandles --forceExit --verbose",
    "test:everything": "NODE_ENV=test jest ./patterns/everything/index.test.ts --detectOpenHandles --forceExit --verbose",
    "test:hook": "NODE_ENV=test jest ./patterns/hook/index.test.ts --detectOpenHandles --forceExit --verbose",
    "test:idempotency": "NODE_ENV=test jest ./patterns/idempotency/index.test.ts --detectOpenHandles --forceExit --verbose",
    "test:interrupt": "NODE_ENV=test jest ./patterns/interrupt/index.test.ts --detectOpenHandles --forceExit --verbose",
    "test:random": "HMSH_IS_CLUSTER=true NODE_ENV=test jest ./patterns/random/index.test.ts --detectOpenHandles --forceExit --verbose",
    "test:retry": "NODE_ENV=test jest ./patterns/retry/index.test.ts --detectOpenHandles --forceExit --verbose",
    "test:search": "NODE_ENV=test jest ./patterns/search/index.test.ts --detectOpenHandles --forceExit --verbose",
    "test:sleep": "NODE_ENV=test jest ./patterns/sleep/index.test.ts --detectOpenHandles --forceExit --verbose",
    "test:signal": "NODE_ENV=test jest ./patterns/signal/index.test.ts --detectOpenHandles --forceExit --verbose"
  },
  "dependencies": {
    "@hotmeshio/hotmesh": "0.3.20",
    "@temporalio/client": "^1.10.3",
    "@temporalio/worker": "^1.10.3",
    "@temporalio/workflow": "^1.10.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "ioredis": "^5.3.2",
    "jest": "^29.5.0",
    "pg": "^8.13.1",
    "redis": "^4.6.13",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.4"
  },
  "keywords": [],
  "author": "",
  "license": "Apache-2.0"
}
